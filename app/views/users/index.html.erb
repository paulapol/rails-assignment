<div class="container">
  <h3 class="custom-title">Users Directory</h3>
  <hr>
  <table class="table table-bordered table-striped">
    <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Action</th>
    </tr>
    </thead>
    <tbody>
    <tr
      <% @users.each do |user| %>>
      <td> <%= user.name %> </td>
      <td> <%= user.email %> </td>
      <td>
        <%= link_to "Delete User", user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"}, class: "btn btn-danger btn-sm" %>
      </td>
    </tr>
      <% end %>
    </tbody>
  </table>
</div>
