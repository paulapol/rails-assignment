<div id="loginbox"
     class="mainbox col-md-3 col-md-offset-2 col-sm-6 col-sm-offset-2 login">
  <div class="panel panel-primary">
    <div class="panel-heading">
      <div class="panel-title">Sign up</div>
    </div>
    <div style="padding-top: 30px" class="panel-body">
      <%= form_with(model: @user, local: true) do |f| %>
        <%= render 'shared/error_messages', class: "text-danger" %>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.text_field :name, class: 'form-control', placeholder: "Name" %>
        </div>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.email_field :email, class: 'form-control', placeholder: "Email" %>
        </div>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password, class: 'form-control', placeholder: "Password" %>
        </div>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: "Password Confirmation" %>
        </div>
        <%= f.submit "Create my account", class: "btn btn-custom-signup" %>
      <% end %>
    </div>
  </div>
</div>
