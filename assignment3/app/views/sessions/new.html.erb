<div id="loginbox" style="margin-top: 50px; margin-left: 35%"
     class="mainbox col-md-3 col-md-offset-2 col-sm-6 col-sm-offset-2">
  <div class="panel panel-info">
    <div class="panel-heading">
      <div class="panel-title">Log in</div>
    </div>
    <div style="padding-top: 30px" class="panel-body">
      <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
          <%= f.email_field :email, placeholder: "Email", class: "form-control" %>
        </div>
        <div style="margin-bottom: 25px" class="input-group">
          <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
          <%= f.password_field :password, placeholder: "Password", class: "form-control" %>
        </div>
        <%= f.label :remember_me, class: "checkbox inline" do %>
          <%= f.check_box :remember_me, style:" margin-left: 0px;" %>
          <span style="margin-left: 15px">Remember me on this computer</span>
        <% end %>
        <%= f.submit "Log in", class: "btn btn-primary", style: "background-color:orange; border-color:orange; margin-left:40%" %>
      <% end %>
      <p style="margin-top: 20px;">New user? <%= link_to "Sign up now!", signup_path %></p>
    </div>
  </div>
</div>